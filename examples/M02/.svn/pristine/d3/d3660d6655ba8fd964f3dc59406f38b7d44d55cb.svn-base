
// класс верхнего уровня
public class ClassificationDemo {
	
	// класс - элемент класса
	// (внутренний класс)
	private class InternalClass {}
	
	// класс - статический элемент класса
	// (вложенный класс)
	static class NestedClass {}
	
	void m() {
		
		// локальный класс
		class LocalInternalClass {}
		
		// анонимный класс
		// наследуем класс Thread
		Thread t = new Thread() {
			@Override
			public void run() {
				// ...
			}
		};
		
		// анонимный класс
		// реализуем интерфейс
		Thread t2 = new Thread(new Runnable() {
			@Override
			public void run() {
				// ...
			}
		});
	}

}